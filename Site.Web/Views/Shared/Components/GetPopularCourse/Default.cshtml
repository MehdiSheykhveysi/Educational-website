@model IEnumerable<Site.Core.Infrastructures.DTO.SpDTO>


<section class="terms-items">
    <header>
        <h2> محبوب ترین دوره ها </h2>
    </header>
    <div class="row">
        @foreach (var item in Model)
        {
            <!-- col -->
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 term-col">
                <article>
                    <a href="/course/detail?courseid=@item.CourseId" class="img-layer"><img src="@Url.Content("~/images/CourseImages/CourseImageThumb/"+@item.ImageName)" /></a>
                    <h2><a href="/course/detail?courseid=@item.CourseId"> @item.CourseTitle </a></h2>

                    @if (@item.CoursePrice == 0)
                    {
                        <span class="text-success">رایگان</span>
                    }
                    else
                    {
                        <span class="text-success">@item.CoursePrice.ToString("#,0")</span>
                    }
                    <i>@item.TotalEpisodTime.ToString().Substring(0, 8)</i>
                </article>
            </div>

        }
    </div>
</section>