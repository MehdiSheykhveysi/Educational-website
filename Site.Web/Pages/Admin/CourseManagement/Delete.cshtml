@page
@model Site.Web.Pages.Admin.CourseManagement.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="well col-md-7 col-sm-7">
        <div class="form-group">
            <div class="form-group">
                <label asp-for="Model.CourseTitle" class="control-label"></label>&nbsp;:&nbsp;
                <input asp-for="Model.CourseTitle" type="text" class="form-control" readonly />
            </div>

            @await Component.InvokeAsync("FillCourseDetail", new { CourseGroupId = Model.Model.CourseGroupId, CourseLevelId = Model.Model.CourseLevelId, CourseStatusId = Model.Model.CourseStatusId, CustomUserId = Model.Model.CustomUserId })

            <div class="form-group">
                <label asp-for="Model.CoursePrice" class="control-label"></label>&nbsp;:&nbsp;
                <input asp-for="Model.CoursePrice" type="number" class="form-control" readonly />
            </div>
            <div class="form-group">
                <span class="form-group glyphicon glyphicon-tags"> </span>
                <input class="form-control " id="basic" data-role="tagsinput" value="@Model.Model.Tags" readonly>
            </div>
        </div>
        <form method="post" asp-page="/Admin/CourseManagement/Delete">
            <div class="form-group">
                <input type="submit" asp-route-Id="@Model.Model.Id" class="btn glyphicon glyphicon-send" value="حذف دوره" />
            </div>
        </form>
    </div>

    <div class="well col-md-5 col-sm-5">
        <div class="form-group">
            <div class="form-group">
                <label asp-for="Model.UploadedImage" class="control-label"></label>
                <div class="form-group">
                    <img class="img-responsive img-rounded" id="imgAvatar" src="@Url.Content("~/images/CourseImages/"+Model.Model.ImageName)" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Model.CourseDescription" class="control-label"></label>&nbsp;:&nbsp;
                <textarea asp-for="Model.CourseDescription" class="form-control total_area" type="text" readonly></textarea>
            </div>
        </div>
    </div>
</div>