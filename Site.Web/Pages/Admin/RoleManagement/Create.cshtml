@page
@model Site.Web.Pages.Admin.RoleManagement.CreateModel

<div class="row">
    <form class="form-horizontal" method="post">
        <div class="well col-sm-7 col-md-7 ">

            <fieldset>

                <!-- Form Name -->
                <div class="text-center">
                    <h2><b>ساخت نقش جدید</b></h2><br>
                </div>
                <!-- Text input-->

                <div class="form-group">
                    <div class="text-right col-md-8 ">
                        <div class="input-group">
                            <div asp-validation-summary="All" class="text-danger glyphicon glyphicon-warning-sign" hidden></div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-8 text-right">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
                            <input asp-for="@Model.Model.Name" placeholder="نام نقش" class="form-control" type="text" required>
                            <span asp-validation-for="@Model.Model.Name" class="text-danger "></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="text-right">
                        <br>
                        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<button type="submit" class="btn btn-warning">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspذخیره <span class="glyphicon glyphicon-save"></span>&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                    </div>
                </div>

            </fieldset>

        </div>
        <div class="well col-sm-4 col-md-4" style="margin-right:5px;">
            @for (int item = 0; item < Model.Model.CustomClaims?.Count; item++)
            {
                <div class="checkbox text-right">

                    <label asp-for="@Model.Model.CustomClaims[item].Name" id="Flag" class="control-label text-center">
                        <input asp-for="@Model.Model.CustomClaims[item].Checked" id="Check" type="checkbox" />
                        <i class="glyphicon glyphicon-chevron-left"></i>
                        @Model.Model.CustomClaims[item].Name
                    </label>

                    <input type="hidden" asp-for="@Model.Model.CustomClaims[item].Name" />
                    <input type="hidden" asp-for="@Model.Model.CustomClaims[item].CustomClaim" />
                </div>
            }
        </div>
    </form>

</div>