@page "{Id}"
@model Site.Web.Pages.Admin.RoleManagement.DetailModel

<div class="well dl-horizontal text-right col-md-4 col-sm-4">
    <div class="form-group" style="margin-top:20px">
        <div class="form-group">

            <div class="form-group">
                <label class="control-label text-right">دسترسی</label>
                <input value="@Model.Model.Name" readonly class="form-control text-right" />
            </div>
        </div>
        <div class="form-group">
            <a asp-page="/Admin/RoleManagement/Edit" asp-route-Id="@Model.Model.Id" class="btn btn-info text-right">ویرایش</a>
        </div>
    </div>
</div>

<div class="well table-responsive form-group text-left dl-horizontal col-md-6 col-sm-6" style="margin-left:20px">
    <table class="table table-striped table-bordered table-hover dataTable no-footer text-right">
        <thead>
            <tr>
                <th>ردیف</th>
                <th>سطح دسترسی </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Model.Claims)
            {
                <tr>
                    <td></td>
                    <td>@item.Value.ToPersionDisplayEnum()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var index = 0;
            $('table tr td:first-child').each(function (i) {
                $(this).text(i + 1);
            });
        });
    </script>
}