@page
@model Site.Web.Pages.Admin.RoleManagement.EditModel

<form class="form-horizontal" method="post">
    <div class="well col-sm-7 col-md-7 ">

        <fieldset>

            <!-- Form Name -->
            <div class="text-center">
                <h2><b>ویرایش نقش </b></h2><br>
            </div>
            <!-- Text input-->

            <div class="form-group">
                <div class="text-right col-md-8 ">
                    <div class="input-group">
                        <div asp-validation-summary="All" class="text-danger glyphicon glyphicon-warning-sign" hidden></div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 text-right">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-certificate"></i></span>
                        <input asp-for="@Model.Model.Name" placeholder="نام نقش" class="form-control" type="text" required>
                        <input asp-for="@Model.Model.IsDeleted" type="hidden">
                        <input asp-for="@Model.Model.Id" type="hidden">
                        <span asp-validation-for="@Model.Model.Name" class="text-danger "></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="text-right">
                    <br>
                    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<button type="submit" class="btn btn-warning">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspذخیره <span class="glyphicon glyphicon-save"></span>&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                </div>
            </div>

        </fieldset>

    </div>
    <div class="well col-sm-4 col-md-4" style="margin-right:5px;">
        @for (int item = 0; item < Model.Model.Claims?.Count; item++)
        {
            <div class="checkbox text-right">

                <label asp-for="@Model.Model.Claims[item].Value" id="Flag" class="control-label text-center">

                    <input asp-for="@Model.Model.Claims[item].Checked" id="Check" type="checkbox" />
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    @(Model.Model.Claims[item].Value.ToPersionDisplayEnum<CustomClaimType>())

                </label>

                <input type="hidden" asp-for="@Model.Model.Claims[item].Value" />
            </div>
        }
    </div>
</form>
@section Scripts{
    <script>
        $(document).ready(function () {
            var index = 0;
            $('table tr td:first-child').each(function (i) {
                $(this).text(i + 1);
            });
        });
    </script>
}