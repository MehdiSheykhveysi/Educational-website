@page

@model Site.Web.Pages.Admin.RoleManagement.IndexModel


<div class="panel panel-info">
    <div class="panel-heading">
        لیست نقش های سایت
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <div class="row">
                    <form method="get">
                        <div class="col-sm-12 col-md-12">
                            <div class="form-group col-sm-4 col-md-4">
                                <input type="text" name="UserName" class="form-control" value=@ViewData["SearchKey"] placeholder="نام نقش" />
                            </div>
                            <div class="form-group col-sm-2 col-md-2">
                                <label class="checkbox-inline">
                                    <input type="checkbox" name="IsDeleted" asp-for="@Model.Model.IsDeleted"> فیلتر حذف شده ها
                                </label>
                            </div>
                            <div class="form-group col-sm-3 col-md-3">
                                <button type="submit" class="btn btn-info">جست و جو</button>
                                <button class="btn btn-default" type="reset">پاک کردن</button>
                            </div>
                        </div>
                    </form>
                    <div class="col-md-12" style="margin: 10px 0;">
                        <a class="btn btn-outline btn-success" asp-page="/Admin/RoleManagement/Create">افزودن نقش جدید</a>
                    </div>
                    <div class="col-sm-7 col-md-7">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>ردیف</th>
                                    <th>نام نقش</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Model.Roles)
                                {
                                    <tr>
                                        <td></td>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            <a asp-page="/Admin/RoleManagement/Edit" asp-route-Id="@item.Id" class="btn btn-success">ویرایش</a>
                                            <a asp-page="/Admin/RoleManagement/Detail" asp-route-Id="@item.Id" class="btn btn-default">جزئیات</a>
                                            <a asp-page="/Admin/RoleManagement/Delete" asp-route-Id="@item.Id" class="btn btn-danger">حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('table tr td:first-child').html($(this).index('table tr') * -1);
        });
    </script>
}