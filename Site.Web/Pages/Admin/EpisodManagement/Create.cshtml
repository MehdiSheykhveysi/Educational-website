@page
@model Site.Web.Pages.Admin.EpisodManagement.CreateModel
@{
    ViewData["Title"] = "افزودن قسمت جدید";
}

<div class="row">
    <form method="post" asp-page="/Admin/EpisodManagement/Create" enctype="multipart/form-data">
        <div class="well col-md-6 col-sm-6">
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <input asp-for="@Model.Model.CourseId" hidden />
                    <label asp-for="@Model.Model.Title" class="control-label"></label>&nbsp;:&nbsp;
                    <input asp-for="@Model.Model.Title" type="text" class="form-control" required />
                    <span asp-validation-for="@Model.Model.Title" class="text-danger"></span>
                </div>
                <div class="form-group boolean optional user_legal_protection">
                    <label asp-for="@Model.Model.IsFree" class="control-label"></label>
                    <label class="boolean optional" for="user_legal_protection">
                        <input asp-for="@Model.Model.IsFree" type="checkbox">
                    </label>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="@Model.Model.FormFile" class="control-label"></label>
                        <input asp-for="@Model.Model.FormFile" type="file" class="btn glyphicon glyphicon-open-file" required />
                        <span asp-validation-for="@Model.Model.FormFile" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <input type="submit" class="btn glyphicon glyphicon-send" value="افزودن" />
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script src="https://rawgit.com/Bttstrp/bootstrap-switch/master/dist/js/bootstrap-switch.min.js"></script>
    <script>
        $("#Model_IsFree").bootstrapSwitch();

        $("#Model_IsFree").on('switchChange.bootstrapSwitch', function (event, state) {
            console.log('checkbox state: ' + state);
            if (state) {
                jQuery('.initial_quote').hide();
                jQuery('.legal1').show();
                jQuery('#legal2').show();
            } else {
                jQuery('.initial_quote').show();
                jQuery('.legal1').hide();
                jQuery('#legal2').hide();
            }
        });
    </script>

}