@page
@model IndexModel

<div class="panel panel-info">
    <div class="panel-heading">
        لیست کاربران سایت
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <div class="row">
                    <form method="get">
                        <div class="col-sm-5 col-md-5">
                            <input type="text" name="UserName" class="form-control" value=@ViewData["SearchKey"] placeholder="نام کاربری" />
                            <button type="submit" class="btn btn-info">جست و جو</button>
                            <button class="btn btn-default btn-sm " type="reset">پاک کردن</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-12" style="margin: 10px 0;">
                    <a class="btn btn-outline btn-success" asp-page="/Admin/Create">افزودن کاربر جدید</a>
                </div>
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th>تصویر کاربر</th>
                            <th>نام کاربری</th>
                            <th>تاریخ عضویت </th>
                            <th>میزان شارژ حساب</th>
                            <th>وضعیت عضویت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Model.List.ListItem)
                        {
                            <tr>
                                <td>
                                    <img src="@Url.Content("~/images/UserProfile/"+@item.Avatar)" style="width:20px;height:20px;" />
                                </td>
                                <td>
                                    @item.UserName
                                </td>
                                <td>
                                    @item.AccountBalance
                                </td>
                                <td>
                                    @item.RegisterDate.ToShamsi()
                                </td>
                                <td>
                                    @if (@item.EmailConfirmed)
                                    {
                                        <p class="text-success">فعال</p>
                                    }
                                    else
                                    {
                                        <p class="text-danger">غیر فعال</p>
                                    }
                                </td>
                                <td>
                                    <a href="#" class="btn btn-success">ویرایش</a>
                                    <a href="#" class="btn btn-default">جزئیات</a>
                                    <a href="#" class="btn btn-danger">حذف</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="dataTables_paginate paging_simple_numbers" id="dataTables-example_paginate">
                            <nav Page-data="@Model.Model.List.PageData" page-name="/Admin/Index" page-username="@Model.Model.Username"></nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>