@page
@model Site.Web.Pages.Admin.DisCountManagement.IndexModel
@{
    ViewData["Title"] = "لیست کد های تخفیف";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-info">
    <div class="panel-heading">
        لیست کد های تخفیف
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                <div class="row">
                    <form method="get">
                        <div class="col-sm-12 col-md-12">
                            <div class="form-group col-sm-4 col-md-4">
                                <input type="text" name="DisCountname" class="form-control" value=@ViewData["SearchKey"] placeholder="نام کد تخفیف" />
                            </div>
                            <div class="form-group col-sm-3 col-md-3">
                                <button type="submit" class="btn btn-info">جست و جو</button>
                                <button class="btn btn-default" type="reset">پاک کردن</button>
                            </div>
                        </div>
                    </form>
                    <div class="col-md-12" style="margin: 10px 0;">
                        <a class="btn btn-outline btn-success" asp-page="/Admin/DisCountManagement/Create">افزودن کد جدید</a>
                    </div>
                    <div class="col-sm-10 col-md-10">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th>ردیف</th>
                                    <th>نام کد</th>
                                    <th>تعداد</th>
                                    <th>درصد تخفیف</th>
                                    <th>تاریخ اغاز اعتبار</th>
                                    <th>تاریخ انقضاء اعتبار</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Model)
                                {
                                <tr>
                                    <td></td>
                                    <td>
                                        @item.Title
                                    </td>
                                    <td>
                                        @item.Count
                                    </td>
                                    <td>
                                        @item.DisCountPercent
                                    </td>
                                    <td>
                                        @item.StartDate
                                    </td>
                                    <td>
                                        @item.MaxDate
                                    </td>
                                    <td>
                                        <a asp-page="/Admin/DisCountManagement/Edit" asp-route-Id="@item.Id" class="btn btn-success">ویرایش</a>
                                        <a asp-page="/Admin/DisCountManagement/Detail" asp-route-Id="@item.Id" class="btn btn-default">جزئیات</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('table tr td:first-child').each(function (i) {
                $(this).text(i + 1);
            });
        });
    </script>
}