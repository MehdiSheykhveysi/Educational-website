@page "{Id}"
@model Site.Web.Pages.Admin.DisCountManagement.DetailModel
@{
    ViewData["Title"] = "نمایش جزئیات";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<form>
    <div class="well col-sm-7 col-md-7 ">
        <fieldset>

            <!-- Form Name -->
            <div class="text-center">
                <h2><b>نمایش جزئیات کد تفیف </b></h2><br>
            </div>
            <!-- Text input-->

            <div class="form-group">
                <div class="text-right col-md-8 ">
                    <div class="input-group">
                        <div asp-validation-summary="All" class="text-danger glyphicon glyphicon-warning-sign" hidden></div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 text-right">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-ok-circle"></i></span>
                        <input asp-for="@Model.Model.Title" placeholder="نام کد" class="form-control" type="text" readonly>
                        <span asp-validation-for="@Model.Model.Title" class="text-danger "></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 text-right">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list-alt"></i></span>
                        <input asp-for="@Model.Model.Count" placeholder="تعداد از این کد" class="form-control" type="text" readonly>
                        <span asp-validation-for="@Model.Model.Count" class="text-danger "></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 text-right">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-signal"></i></span>
                        <input asp-for="@Model.Model.DisCountPercent" placeholder="درصد کد تخفیف" class="form-control" type="text" readonly>
                        <span asp-validation-for="@Model.Model.DisCountPercent" class="text-danger "></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8 text-right">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        <input asp-for="@Model.Model.StartDate" placeholder="تاریخ شروع اعتبار" class="form-control" type="text" readonly>
                        <span asp-validation-for="@Model.Model.StartDate" class="text-danger "></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8 text-right">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                        <input asp-for="@Model.Model.MaxDate" placeholder="تاریخ پایان اعتبار" class="form-control" type="text" readonly>
                        <span asp-validation-for="@Model.Model.MaxDate" class="text-danger "></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="text-right">
                    <br>
                    <a asp-page="/Admin/DisCountManagement/Edit" asp-route-Id="@Model.Model.Id" class="btn btn-success">ویرایش</a>
                    <a asp-page="/Admin/DisCountManagement/Index" class="btn btn-info">بازگشت</a>
                </div>
            </div>

        </fieldset>

    </div>
</form>