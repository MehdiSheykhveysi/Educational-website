<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description">
    <meta name="author">
    <title>پنل ادمین</title>
    <partial name="_StylesPartialView" />
    <link href="~/lib/metisMenu/metisMenu.css" rel="stylesheet" />
    <link href="~/AdminStaticFiles/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/AdminStaticFiles/css/main.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery-2.2.3.min.js"></script>
    <link href="~/AdminStaticFiles/css/bootstrap-tagsinput.css" rel="stylesheet" />
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html"></a>
            </div>
            <!-- /.navbar-header -->
            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a asp-page="/Admin/UserManagment/Index"><i class="glyphicon glyphicon-dashboard"></i> داشبورد</a>
                        </li>
                        <li>
                            <a href="#"><i class="glyphicon glyphicon-cog"></i> مدیریت کاربران<span class="glyphicon glyphicon-arrow-down"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a asp-page="/Admin/UserManagment/Index">لیست کاربران</a>
                                </li>
                                <li>
                                    <a asp-page="/Admin/UserManagment/Create">افزودن کاربر</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#"><i class="glyphicon glyphicon-cog"></i> مدیریت نقش ها<span class="glyphicon glyphicon-arrow-down"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a asp-page="/Admin/RoleManagement/Index"> لیست نقش ها</a>
                                </li>
                                <li>
                                    <a asp-page="/Admin/RoleManagement/Create"> افزودن نقش </a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="#"><i class="glyphicon glyphicon-cog"></i> مدیریت دورها<span class="glyphicon glyphicon-arrow-down"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a asp-page="/Admin/CourseManagement/Index"> لیست دورها</a>
                                </li>
                                <li>
                                    <a asp-page="/Admin/CourseManagement/Create"> افزودن دوره جدید</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12" style="padding:2px;">
                        @{
                            if (ViewData["Massege"] != null)
                            {
                            <div class="alert alert-success"><h3>@ViewData["Massege"]</h3></div>
                            }
                            else if (ViewData["Error"] != null)
                            {
                            <div class="alert alert-danger"><h3>@ViewData["Error"]</h3></div>
                            }

                        }
                        @RenderBody()
                    </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
    </div>
    <!-- /#page-wrapper -->
    <!-- /#wrapper -->
    <!-- jQuery -->

    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <script src="~/lib/metisMenu/metisMenu.js"></script>

    <script src="~/AdminStaticFiles/js/sb-admin-2.js"></script>

    <script src="~/AdminStaticFiles/js/bootstrap-tagsinput.js"></script>

    <script src="~/AdminStaticFiles/js/typeahead.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>
